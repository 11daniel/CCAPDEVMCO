<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/public/css/profile.css">
    <title>User Profile</title>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <a href="/userforum" class="navbar-logo">FORUM</a>
        <div class="navbar-links">
            <a href="/profile" class="navbar-user">
                <img src="{{userData.profilePicture}}" alt="User Profile">
                <span>{{userData.username}}</span>
            </a>
            <a href="#"><i class="bi bi-bell"></i></a>
            <a href="/settings"><i class="bi bi-gear"></i></a>
        </div>
    </nav>

    <!-- Profile Section -->
    <div class="profile">
        <div class="profile-info">
            <h2><i class="bi bi-person-circle"></i> User Profile</h2>
            <h3>{{userData.username}}</h3>
            <p>{{userData.bio}}</p>
            <p>Joined: {{formatDate userData.joinDate}}</p>
        </div>
        <div class="profile-posts">
            <h3>Recent Posts</h3>
            {{#if userData.posts.length}}
                <ul>
                    {{#each userData.posts}}
                        <li>
                            <div class="post-header">
                                <span class="post-date"><i class="bi bi-calendar"></i> {{formatDate this.timestamp}}</span>
                                <h4>{{this.title}}</h4>
                            </div>
                            <div class="post-body">
                                <p>{{this.content}}</p>
                            </div>
                            <div class="post-footer">
                                <a href="#"><i class="bi bi-hand-thumbs-up"></i> {{this.upvotes}}</a>
                                <a href="#"><i class="bi bi-hand-thumbs-down"></i> {{this.downvotes}}</a>
                                <a href="#"><i class="bi bi-chat"></i> {{this.comments.length}} Comments</a>
                                <a href="#">{{this.comments.edit}} Edit</a>
                                <a href="#">{{this.comments.edit}} Delete</a>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>No recent posts</p>
            {{/if}}
        </div>
    </div>
</body>
</html>
